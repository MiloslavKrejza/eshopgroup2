@{
    ViewData["Title"] = "Registrace";
}
<h2>@ViewData["Title"]</h2>

<div class="form-group">
    <form>
        <div class="row">
            <div class="col-lg-3">
                <label for="name">Jméno</label>
                <input type="text" id="name" />
            </div>
            <div class="col-lg-3">
                <label for="sur">Příjmení</label>
                <input type="text" id="sur" />
            </div>
        </div>
        <label for="mail">E-mail</label>
        <input type="email" id="mail" />
        <div class="row">
            <div class="col-lg-3">
                <label for="pass">Heslo</label>
                <input type="password" id="pass" />
            </div>
            <div class="col-lg-3">
                <label for="passAgain">Heslo znovu</label>
                <input type="password" id="passAgain" />
            </div>
        </div>
    </form>

    <p><input id="vyplnitAdresu" type="checkbox" checked />Chcete vyplnit i adresu?</p>

    <form>
        <label for="street">Ulice</label>
        <input type="text" id="street" />
        <div class="row">
            <div class="col-lg-3">
                <label for="zip">PSČ</label>
                <input type="number" id="zip" />
            </div>
            <div class="col-lg-3">
                <label for="city">Město</label>
                <input type="text" id="city" />
            </div>
        </div>
        <button type="submit">Registrovat se</button>
    </form>
</div>
